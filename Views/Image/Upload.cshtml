@using Microsoft.AspNetCore.Http
@model IFormFile

<h2>Upload Ảnh Lên Imgur</h2>

@if (ViewBag.Message != null)
{
<div style="color:red">@ViewBag.Message</div>
}

<form asp-action="Upload" asp-controller="Image" method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Chọn ảnh:</label>
        <input type="file" name="file" />
    </div>
    <button type="submit">Upload</button>
</form>

@if (ViewBag.ImageUrl != null)
{
<div>
    <p>Link ảnh:</p>
    <a href="@ViewBag.ImageUrl" target="_blank">@ViewBag.ImageUrl</a>
    <div>
        <img src="@ViewBag.ImageUrl" alt="Uploaded Image" style="max-width:500px;" />
    </div>
</div>
}